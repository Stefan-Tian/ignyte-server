{
  "name": "ignyte-express",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Stefan Tien",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.pug  dist/",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch --exit-child src/index.ts",
    "build": "yarn clean && yarn copy-files && tsc",
    "start": "node dist/index.js",
    "db:save": "prisma migrate dev --create-only --preview-feature --schema src/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --preview-feature --schema src/prisma/schema.prisma",
    "db:migrate:prod": "prisma migrate deploy --preview-feature --schema src/prisma/schema.prisma",
    "db:seed": "prisma db seed --preview-feature --schema src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^2.24.1",
    "@types/passport-google-oauth20": "^2.0.9",
    "argon2": "^0.28.2",
    "connect-pg-simple": "^6.2.1",
    "cookie-session": "^1.4.0",
    "crypto": "^1.0.1",
    "dayjs": "^1.10.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.11.1",
    "express-validators": "^1.0.4",
    "helmet": "^4.6.0",
    "nodemailer": "^6.6.1",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0",
    "prisma": "^2.24.1",
    "pug": "^3.0.2",
    "tspath": "^1.3.7"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^4.2.2",
    "@types/cookie-session": "^2.0.42",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/express-validator": "^3.0.0",
    "@types/nodemailer": "^6.4.2",
    "@types/passport": "^1.0.6",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "1.1.4",
    "typescript": "^4.3.2"
  }
}
